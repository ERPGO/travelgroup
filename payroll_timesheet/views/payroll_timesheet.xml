<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_payslip_timesheet_inherit1"
                model="ir.ui.view">
            <field name="name">HR Payslip Timesheet inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="custom_payslip_timesheet" string="Validated Timesheets">
                        <field name="timesheet_ids">
                            <tree editable="bottom" string="Validated Timesheets Activities" default_order="date">
                                <field name="date"/>
                                <field name="user_id" invisible="1"/>
                                <field name="employee_id" required="1"/>
                                <field name="name"/>
                                <field name="project_id"/>
                                <field name="unit_amount" sum="Total" widget="timesheet_uom"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="hr_payslip_total_api_form"
                model="ir.ui.view">
            <field name="name">HR Payslip Timesheet Hours inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="custom_custom_page" string="Overhead Allocation values">
                        <group>
                            <group string="Timesheets hours">
                                <field name="total_project_hours"
                                       string="Total Project Hours"/>
                                <field name="total_num_projects" string="Total number of Projects"/>
                                <field name="api_project_hours" string="API project hours"/>
                                <field name="vizam_project_hours" string="Vizam project hours"/>
                            </group>
                            <group name="overhead percentage" string="Percentage based on total hours">
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>