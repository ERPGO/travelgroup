<odoo>
    <data>
        <record id="bonus_calculation_view_form"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="model">bonus_calculation</field>
            <field name="name">Bonus Calculation View Form</field>
            <field name="type">form</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Bonus for Timesheet app">
                        <group col="4">
                            <field name="name" modifiers="{}"/>
                            <field name="bonus_amount" modifiers="{}"/>
                            <field name="bonus_date" modifiers="{}"/>
                            <separator/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="bonus_calculation_view_tree"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="model">bonus_calculation</field>
            <field name="name">Bonus Calculation View Tree</field>
            <field name="type">tree</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="Bonus for Timesheet app">
                    <field name="name" modifiers="{}"/>
                    <field name="bonus_amount" string="Amount"/>
                </tree>
            </field>
        </record>


        <record id="employee_evaluation_view_form"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="model">employee_evaluation</field>
            <field name="name">Employee Evaluation View Form</field>
            <field name="type">form</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Employees evaluation for bonus calculation">
                        <group col="4">
                            <field name="name" modifiers="{required: true}"/>
                            <field name="bonus"/>
                            <field name="bonus_amount" modifiers="{readonly: true}"/>
                            <newline/>
                            <field name="evaluation_lines" colspan="4" on_change="1" modifiers="{}">
                                <tree string="Evaluation Lines" editable="top" context="{'search_default_evaluation_id': active_id, 
                                'default_evaluation_id':active_id}">
                                    <field name="evaluation_id" invisible="1"
                                           context="{'search_default_evaluation_id': active_id, 
                                'default_evaluation_id':active_id}"/>
                                    <field name="employee_id" required="1"/>
                                    <field name="experience"/>
                                    <field name="operational_excellence"/>
                                    <field name="organization_skill"/>
                                    <field name="kpi_score"/>
                                </tree>
                            </field>
                            <newline/>
                            <field name="total_kpi" modifiers="{readonly: true}"/>
                            <field name="total_experience" modifiers="{readonly: true}"/>
                            <separator/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_evaluation_view_tree"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="model">employee_evaluation</field>
            <field name="name">Employee Evaluation View Tree</field>
            <field name="type">tree</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="Employee Evaluations">
                    <field name="name" modifiers="{}"/>
                </tree>
            </field>
        </record>

        <record id="employee_evaluation_line_view_form"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="model">employee_evaluation.line</field>
            <field name="name">Employee Evaluation Line View Form</field>
            <field name="type">form</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Evaluation Lines">
                        <group col="4">
                            <field name="evaluation_id" required="1"/>
                            <field name="employee_id" required="1"/>
                            <field name="organization_skill" on_change="1" modifiers="{}"/>
                            <field name="operational_excellence" on_change="1" modifiers="{}"/>
                            <field name="kpi_score" modifiers="{readonly: true}"/>
                            <field name="experience" modifiers="{readonly: true}"/>
                            <separator/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="employee_evaluation_line_view_tree"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="model">employee_evaluation.line</field>
            <field name="name">Employee Evaluation Line View Tree</field>
            <field name="type">tree</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <tree string="Evaluation Lines" editable="bottom">
                    <field name="evaluation_id"
                           context="{'search_default_evaluation_id': active_id,
                                'default_evaluation_id':active_id}"/>
                    <field name="employee_id" required="1"/>
                    <field name="experience"/>
                    <field name="operational_excellence"/>
                    <field name="organization_skill"/>
                    <field name="kpi_score"/>
                </tree>
            </field>
        </record>


        <record id="hr_payslip_bonus_view_form_inherit"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="name">Bonus Evaluation on Payslip</field>
            <field name="type">form</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                    <page name="Bonus Calculation" string="Bonus Calculation">
                        <group>
                            <group name="Bonus on Payslip">
                                <field name="evaluation_id"/>
                                <field name="total_experience"/>
                                <field name="total_kpi"/>
                            </group>
                            <group>
                                <field name="kpi_split"/>
                                <field name="experience_split"/>
                                <field name="total_split"/>
                                <field name="bonus_eligible_employees" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="evaluation_lines"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="employee_bonus_settings_inherit_form"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="model">hr.employee</field>
            <field name="name">Bonus Settings for Employee</field>
            <field name="type">form</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form[1]/sheet[1]/div[2]/div[1]/notebook[1]" position="inside">
                        <page string="Bonus settings">
                            <group>
                                <group>
                                    <field name="is_bonus_eligible"/>
                                    <field name="startdate"/>
                                    <field name="experience"/>
                                </group>
                                <group/>
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <!---->

        <record model="ir.actions.act_window" id="bonus_calculation_action">
            <field name="name">Bonuses</field>
            <field name="res_model">bonus_calculation</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record model="ir.actions.act_window" id="employee_evaluation_action">
            <field name="name">Evaluations</field>
            <field name="res_model">employee_evaluation</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="employee_evaluation_line_action">
            <field name="name">All Evaluations</field>
            <field name="res_model">employee_evaluation.line</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- top level menu: no parent -->
        <menuitem id="main_bonus_menu" name="Bonus Calculations"/>
        <menuitem id="bonuses_menu" name="Bonuses" parent="main_bonus_menu"
                  action="bonus_calculation_action"/>
        <menuitem id="employee_evaluation_menu" name="Employee Evaluation" parent="main_bonus_menu"
                  action="employee_evaluation_action"/>
        <menuitem id="employee_evaluation_line_menu" name="All Evaluations" parent="main_bonus_menu"
                  action="employee_evaluation_line_action"/>


    </data>

</odoo>