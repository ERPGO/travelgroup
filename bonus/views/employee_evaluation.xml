<record id="hr_payslip_bonus_view_form_inherit"
        model="ir.ui.view">
    <field name="field_parent" eval="False"/>
    <field name="model">hr.payslip</field>
    <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
    <field name="name">Bonus Evaluation on Payslip</field>
    <field name="type">form</field>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
        <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
            <page name="Bonus Calculation" string="Bonus Calculation">
                <field name="evaluation_id"/>
                <field name="total_experience"/>
                <field name="total_kpi"/>
                <field name="evaluation_lines"/>
            </page>
        </xpath>
    </field>
</record>
