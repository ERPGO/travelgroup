<odoo>
    <data>
        <record id="custom_employee_experience_field"
                model="ir.ui.view">
            <field name="field_parent" eval="False"/>
            <field name="inherit_id" ref="hr.employee.form"/>
            <field name="mode">extension</field>
            <field name="model">hr.employee</field>
            <field name="name">hr.custom_experience_field_form</field>
            <field name="priority">99</field>
            <field name="type">form</field>
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_phone']" position="after">
                    <field name="x_start_date"/>
                    <field name="x_studio_experience" string="Experience"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>